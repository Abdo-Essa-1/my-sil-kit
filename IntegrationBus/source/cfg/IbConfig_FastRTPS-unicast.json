{
    "$schema": "./IbConfig.schema.json",
    "ConfigVersion": "0.0.1",
    "ConfigName": "Example Config",
    "Description": " Configuration that covers middleware configuration options.",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "Participant1",
                "Description": "Participant with CAN controller",
                "CanControllers": [ "CAN" ]
            },
            {
                "Name": "Participant2",
                "Description": "Participant with CAN controller",
                "CanControllers": [ "CAN" ]
            },
            {
                "Name": "ExecutionControllerDt",
                "IsSyncMaster": true
            }
        ],

        "Links": [
            {
                "Name": "CAN",
                "Endpoints": [
                    "Participant1/CAN",
                    "Participant2/CAN"
                ]
            }
        ],

        "TimeSync": {
            "SyncPolicy": "Loose"
        }
    },

    "MiddlewareConfig": {

        "FastRTPS": {
            "DiscoveryType": "Unicast",
            "UnicastLocators": {
                "Participant1": "127.0.0.1",
                "Participant2": "127.0.0.1",
                "ExecutionControllerDt": "127.0.0.1"
            }
        }

    }

}
