{
    "$schema": "./IbConfig.schema.json",
    "ConfigVersion": "0.0.1",
    "ConfigName": "IO-Draft",
    "Description": "Exemplary draft for an IB Config that uses IOs.",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "IO-Sender",
                "Description": "Exemplary participant that sends various Outputs with initialization",
    
                "Digital-Out": [
                    {"Name": "Headlight-Left", "value" : false },
                    {"Name": "Headlight-Right", "value" : false },
                    {"Name": "Backlight-Left", "value" : false }
                ],
                "Analog-Out": [
                    { "Name": "Battery-Voltage", "value": 7.3, "unit": "V" },
                    { "Name": "Gas-Level", "value": 17.3, "unit": "%"}
                ],
                "Pwm-Out": [
                    { "Name": "Indicator-Left", "freq": { "value": 3, "unit": "Hz"}, "duty": 0.4 },
                    { "Name": "Indicator-Right", "freq": { "value": 2.5, "unit": "Hz"}, "duty": 0.5  }
                ],
                "Pattern-Out": [
                    { "Name": "KeyFob",  "value":"626565702d62656570" },
                    { "Name": "SecretSpyCode", "value": "544f50534543524554" }
                ]
            },

            {
                "Name": "IO-Receiver",
                "Description": "Exemplary participant that receives various Inputs",
    
                "Digital-In": [
                    {"Name": "Headlight-Left"},
                    {"Name": "Headlight-Right"},
                    {"Name": "Backlight-Left"}
                ],
                "Analog-In": [
                    {"Name": "Battery-Voltage"},
                    {"Name": "Gas-Level"}
                ],
                "Pwm-In": [
                    {"Name": "Indicator-Left"},
                    {"Name": "Indicator-Right"}
                ],
                "Pattern-In": [
                    {"Name": "KeyFob"},
                    {"Name": "SecretSpyCode"}
                ]
            },
    
            {
                "Name": "ExecutionControllerDt",
                "IsSyncMaster": true
            }
        ],
    
        "Links": [
            {
                "Name": "DIO_1",
                "Endpoints": [ "IO-Sender/Headlight-Left", "IO-Receiver/Headlight-Left" ]
            },
            {
                "Name": "DIO_2",
                "Endpoints": [ "IO-Sender/Headlight-Right", "IO-Receiver/Headlight-Right" ]
            },
            {
                "Name": "DIO_3",
                "Endpoints": [ "IO-Sender/Backlight-Left", "IO-Receiver/Backlight-Left" ]
            },
            {
                "Name": "AIO_2",
                "Endpoints": [ "IO-Sender/Battery-Voltage", "IO-Receiver/Battery-Voltage" ]
            },
            {
                "Name": "AIO_1",
                "Endpoints": [ "IO-Sender/Gas-Level", "IO-Receiver/Gas-Level" ]
            },
            {
                "Name": "PWM_1",
                "Endpoints": [ "IO-Sender/Indicator-Left", "IO-Receiver/Indicator-Left" ]
            },
            {
                "Name": "PWM_2",
                "Endpoints": [ "IO-Sender/Indicator-Right", "IO-Receiver/Indicator-Right" ]
            },
            {
                "Name": "PATTERN_1",
                "Endpoints": [ "IO-Sender/KeyFob", "IO-Receiver/KeyFob" ]
            },
            {
                "Name": "PATTERN_2",
                "Endpoints": [ "IO-Sender/SecretSpyCode", "IO-Receiver/SecretSpyCode" ]
            }

        ]

    }

}
