{
    "$schema": "./IbConfig.schema.json",
    "ConfigVersion": "0.0.1",
    "ConfigName": "Large Message Example",
    "Description": "Sample Configuration for Large Messages.",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "Publisher",
                "Description": "Publishes large messages",
                "GenericPublishers": [
                    {
                        "Name": "TestTopic",
                        "Protocol": "ROS",
                        "DefinitionUri": "file://./TestTopic.msg"
                    }
                ]
            },
            {
                "Name": "Subscriber",
                "Description": "Subscribes different generic messages",
                "GenericSubscribers": [
                    {"Name": "TestTopic"}
                ]
            },
            {
                "Name": "ExecutionControllerDt",
                "IsSyncMaster": true
            }
        ],

        "Links": [
            {
                "Name": "TestTopic",
                "Endpoints": [
                    "Publisher/TestTopic",
                    "Subscriber/TestTopic"
                ]
            }
        ]

    },

    "MiddlewareConfig": {

        "FastRTPS": {
            "DiscoveryType": "ConfigFile",
            "ConfigFileName": "SocketBufferSizeITest_FastRTPS.xml"
        }

    }

}
