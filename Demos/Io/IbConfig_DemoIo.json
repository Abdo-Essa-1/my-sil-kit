{
    "ConfigVersion": "0.0.1",
    "ConfigName": "IODemo",
    "Description": "Sample configuration for I/O",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "IoWriter",
                "Description": "Sends I/O values",

                "IsSyncMaster": true,
                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote",
                            "Level": "Trace"
                        }
                    ]
                },
                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "Digital-Out": [
                    { "DIO": false }
                ],
                "Analog-Out": [
                    { "AIO": {"value": 7.3, "unit": "V" }}
                ],
                "Pwm-Out": [
                    { "PWM": { "freq": { "value": 2.5, "unit": "Hz"}, "duty": 0.4 } }
                ],
                "Pattern-Out": [
                    { "PATTERN": "626565702d62656570" }
                ]
            },
            {
                "Name": "IoReader",
                "Description": "Receives I/O values",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote",
                            "Level": "Trace"
                        }
                    ]
                },
                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "Digital-In": [ "DIO" ],
                "Analog-In": [ "AIO" ],
                "Pwm-In": [ "PWM" ],
                "Pattern-In": [ "PATTERN" ]
            },
            {
                "Name": "SystemController",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote"
                        }
                    ]
                }
            },
            {
                "Name": "SystemMonitor",
                "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",

                "Logger": {
                    "LogFromRemotes": true,
                    "FlushLevel": "Info",
                    "Sinks": [
                        {
                            "Type": "Stdout"
                        }
                    ]
                }
            }
        ],

        "Links": [
            {
                "Name": "DIO",
                "Endpoints": [ "IoWriter/DIO", "IoReader/DIO" ]
            },
            {
                "Name": "AIO",
                "Endpoints": [ "IoWriter/AIO", "IoReader/AIO" ]
            },
            {
                "Name": "PWM",
                "Endpoints": [ "IoWriter/PWM", "IoReader/PWM" ]
            },
            {
                "Name": "PATTERN",
                "Endpoints": [ "IoWriter/PATTERN", "IoReader/PATTERN" ]
            }
        ],

        "TimeSync": {
            "SyncPolicy": "Loose",
            "TickPeriodNs": 1000000
        }

    },

    "LaunchConfigurations": [
        {
            "Name": "Installation",
            "ParticipantEnvironments": [
                {
                    "Participant": "IoWriter",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoIo",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% IoWriter %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "IoReader",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoIo",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% IoReader %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }
            ]
        },
