{
    "ConfigVersion": "0.0.1",
    "ConfigName": "CanDemo",
    "Description": "Sample configuration for CAN without NetworkSimulator",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "CanWriter",
                "Description": "Demo Writer",

                "ParticipantController": {
                    "SyncType": "DistributedTimeQuantum"
                },
                "Logger": {
                    "Sinks": [
                        {
                            "Type": "Remote"
                        }
                    ]
                },
                "CanControllers": [ 
                    {
                        "Name": "CAN1",
                        "DISABLED UseTraceSinks": ["Sink1"],
                        "Replay": {
                            "Direction": "Send",
                            "UseTraceSource": "Source1"
                        }
                    
                    }
                ],

                "TraceSinks" : [
                    {
                        "Name": "Sink1",
                        "Type": "Mdf4File",
                        "OutputPath": "CanWriter.mf4"
                    }
                ],
                "TraceSources" : [
                    {
                        "Name": "Source1",
                        "Type": "Mdf4File",
                        "InputPath": "CanWriter.mf4"
                    }
                ]
            },
            {
                "Name": "CanReader",
                "Description": "Demo Reader",
                "Logger": {
                    "Sinks": [
                        {
                            "Type": "Remote"
                        }
                    ]
                },
                "ParticipantController": {
                    "SyncType": "DistributedTimeQuantum"
                },
                "CanControllers": [
                    {
                        "Name": "CAN1",
                        "DISABLED UseTraceSinks": ["Sink1"],
                        "DISABLED Replay": {
                            "Direction": "Send",
                            "UseTraceSource": "Source1"
                        }
                    }
                ],

                "TraceSinks" : [
                    {
                        "Name": "Sink1",
                        "Type": "Mdf4File",
                        "OutputPath": "CanReader.mf4"
                    }
                ],
                "TraceSources" : [
                    {
                        "Name": "Source1",
                        "Type": "Mdf4File",
                        "InputPath": "CanReader.mf4"
                    }
                ]
            },
            {
                "Name": "SystemController",
                "IsSyncMaster": true,
                "Logger": {
                    "Sinks": [
                        {
                            "Type": "Remote"
                        }
                    ]
                }
            },
            {
                "Name": "SystemMonitor",
                "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",
                "Logger": {
                    "LogFromRemotes": true,
                    "FlushLevel": "Info",
                    "Sinks": [
                        {
                            "Type": "Stdout"
                        }
                    ]
                }
            }
        ],

        "Links": [
            {
                "Name": "CAN1",
                "Endpoints": [
                    "CanWriter/CAN1",
                    "CanReader/CAN1"
                ]
            }
        ],

        "TimeSync": {
            "TickPeriodNs": 1000000
        }

    },

    "MiddlewareConfig": {
        "ActiveMiddleware": "VAsio"
    },

    "LaunchConfigurations": [
        {
            "Name": "Installation",
            "ParticipantEnvironments": [
                {
                    "Participant": "CanWriter",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoCan",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% CanWriter %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "CanReader",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoCan",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% CanReader %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }
            ]
        },
