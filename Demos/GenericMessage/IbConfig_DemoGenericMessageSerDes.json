{
  "ConfigVersion": "0.0.1",
  "ConfigName": "GenericMessageDemoSerDes",
  "Description": "Sample Configuration for Generic Messages with De-/Serialization",

  "SimulationSetup": {

    "Participants": [
      {
        "Name": "Publisher",
        "Description": "Publishes different generic messages",

        "Logger": {
          "Sinks": [
            {
              "Type": "Remote"
            }
          ]
        },
        "ParticipantController": {
          "SyncType": "DistributedTimeQuantum"
        },
        "GenericPublishers": [
          {
            "Name": "Int32",
            "Protocol": "ROS",
            "DefinitionUri": "file://./sim/groundtruth_topic.msg"
          },
          {
            "Name": "SimpleStruct",
            "Protocol": "ROS",
            "DefinitionUri": "file://./vehicle-model-out.msg"
          },
          {
            "Name": "Array",
            "Protocol": "ROS",
            "DefinitionUri": "file://./motion_planning/trajectory_for_controller.msg"
          }
        ]
      },
      {
        "Name": "Subscriber",
        "Description": "Subscribes different generic messages",

        "Logger": {
          "Sinks": [
            {
              "Type": "Remote"
            }
          ]
        },

        "ParticipantController": {
          "SyncType": "DistributedTimeQuantum"
        },
        "GenericSubscribers": [
          { "Name": "Int32" },
          { "Name": "SimpleStruct" },
          { "Name": "Array" }
        ]
      },
      {
        "Name": "SystemController",

        "Logger": {
          "Sinks": [
            {
              "Type": "Remote"
            }
          ]
        }
      },
      {
        "Name": "SystemMonitor",
        "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",

        "Logger": {
          "LogFromRemotes": true,
          "FlushLevel": "Info",
          "Sinks": [
            {
              "Type": "Stdout"
            }
          ]
        }
      }
    ],
    "Links": [
      {
        "Name": "Int32",
        "Endpoints": [
          "Publisher/Int32",
          "Subscriber/Int32"
        ]
      },
      {
        "Name": "SimpleStruct",
        "Endpoints": [
          "Publisher/SimpleStruct",
          "Subscriber/SimpleStruct"
        ]
      },
      {
        "Name": "Array",
        "Endpoints": [
          "Publisher/Array",
          "Subscriber/Array"
        ]
      }
    ],

  },

  "MiddlewareConfig": {
    "ActiveMiddleware": "VAsio"
  },

  "LaunchConfigurations": [
    {
      "Name": "Installation",
      "ParticipantEnvironments": [
        {
          "Participant": "Publisher",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoGenericMessageSerDes",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Publisher %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "Subscriber",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoGenericMessageSerDes",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Subscriber %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "SystemMonitor",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemMonitor",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "SystemController",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemController",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
        }
      ]
    }
  ]
}
