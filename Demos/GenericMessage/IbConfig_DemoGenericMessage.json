{
    "ConfigVersion": "0.0.1",
    "ConfigName": "GenericMessageDemo",
    "Description": "Sample Configuration for Generic Messages",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "Publisher",
                "Description": "Publishes different generic messages",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote",
                            "Level": "Trace"
                        }
                    ]
                },
                "IsSyncMaster": true,
                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "GenericPublishers": [
                    {
                        "Name": "GroundTruth",
                        "Protocol": "ROS",
                        "DefinitionUri": "file://./sim/groundtruth_topic.msg"
                    },
                    {
                        "Name": "VehicleModelOut",
                        "Protocol": "ROS",
                        "DefinitionUri": "file://./vehicle-model-out.msg"
                    },
                    {
                        "Name": "MotionTrajectory",
                        "Protocol": "ROS",
                        "DefinitionUri": "file://./motion_planning/trajectory_for_controller.msg"
                    }
                ]
            },
            {
                "Name": "Subscriber",
                "Description": "Subscribes different generic messages",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote",
                            "Level": "Trace"
                        }
                    ]
                },

                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "GenericSubscribers": [
                    "GroundTruth",
                    "VehicleModelOut",
                    "MotionTrajectory"
                ]
            },
            {
                "Name": "SystemController",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote"
                        }
                    ]
                }
            },
            {
                "Name": "SystemMonitor",
                "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",

                "Logger": {
                    "LogFromRemotes": true,
                    "FlushLevel": "Info",
                    "Sinks": [
                        {
                            "Type": "Stdout"
                        }
                    ]
                }
            }
        ],
        "Links": [
            {
                "Name": "GroundTruth",
                "Endpoints": [
                    "Publisher/GroundTruth",
                    "Subscriber/GroundTruth"
                ]
            },
            {
                "Name": "VehicleModelOut",
                "Endpoints": [
                    "Publisher/VehicleModelOut",
                    "Subscriber/VehicleModelOut"
                ]
            },
            {
                "Name": "MotionTrajectory",
                "Endpoints": [
                    "Publisher/MotionTrajectory",
                    "Subscriber/MotionTrajectory"
                ]
            }
        ],

        "TimeSync": {
            "SyncPolicy": "Loose",
            "TickPeriodNs": 1000000
        }

    },

    "LaunchConfigurations": [
        {
            "Name": "Installation",
            "ParticipantEnvironments": [
                {
                    "Participant": "Publisher",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoGenericMessage",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Publisher %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "Subscriber",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoGenericMessage",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Subscriber %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoPassiveSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }
            ]
        },
