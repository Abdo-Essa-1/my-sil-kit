{
  "ConfigVersion": "0.8.1",
  "ConfigName": "C Data Publish Subscribe Demo",
  "Description": "A demo configuration for data publishing and subscribing",

  "SimulationSetup": {
    "Participants": [
      {
        "Name": "Publisher1",
        "Description": "Participant with data publisher",
        "Logger": {
          "Sinks": [
            {
              "Type": "Stdout",
              "Level": "Info"
            }
          ]
        },
        "DataPublishers": [
          {
            "Name": "TopicA"
          }
        ]
      },
      {
        "Name": "Subscriber1",
        "Description": "Participant with data subscriber",
        "Logger": {
          "Sinks": [
            {
              "Type": "Stdout",
              "Level": "Info"
            }
          ]
        },
        "DataSubscribers": [
          { "Name": "TopicA" }
        ]
      },
      {
        "Name": "SystemController",
        "Logger": {
          "Sinks": [
            {
              "Type": "Stdout",
              "Level": "Trace"
            }
          ]
        }
      }
    ],

    "Links": [
      {
        "Name": "TopicA",
        "Endpoints": [
          "Publisher1/TopicA",
          "Subscriber1/TopicA"
        ]
      }
    ]
  },

  "MiddlewareConfig": {
    "ActiveMiddleware": "VAsio"
  }

}