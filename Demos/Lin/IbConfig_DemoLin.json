                    "WorkingFolder": ".",
                    "Executable": "../Debug/bin/IbDemoPassiveSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "../Debug/bin/IbDemoSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }

            ]
        },
        {
            "Name": "Developer-WinRelease",
            "ParticipantEnvironments": [
                {
                    "Participant": "LinMaster",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "../Release/bin/IbDemoLin",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% LinMaster %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "LinSlave",
