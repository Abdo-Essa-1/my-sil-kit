{
    "ConfigVersion": "0.0.1",
    "ConfigName": "LinDemoNetSim",
    "Description": "Sample configuration for LIN with NetworkSimulator",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "LinMaster",
                "Description": "LIN Master",

                "IsSyncMaster": true,
                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote",
                            "Level": "Trace"
                        }
                    ]
                },

                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "LinControllers": [ "LIN1" ]
            },
            {
                "Name": "LinSlave",
                "Description": "LIN Slave",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote",
                            "Level": "Trace"
                        }
                    ]
                },

                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "LinControllers": [ "LIN1" ]
            },
            {
                "Name": "NetworkSimulator",

                "ParticipantController": {
                    "SyncType": "DiscreteTime"
                },
                "NetworkSimulators": [ "Lin-Simulator" ]
            },
            {
                "Name": "SystemController",

                "Logger": {
                    "FlushLevel": "Warn",
                    "Sinks": [
                        {
                            "Type": "Remote"
                        }
                    ]
                }
            },
            {
                "Name": "SystemMonitor",
                "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",

                "Logger": {
                    "LogFromRemotes": true,
                    "FlushLevel": "Info",
                    "Sinks": [
                        {
                            "Type": "Stdout"
                        }
                    ]
                }
            }
        ],

        "Links": [
            {
                "Name": "LIN1",
                "Endpoints": [
                    "LinMaster/LIN1",
                    "LinSlave/LIN1"
                ]
            }
        ],

        "NetworkSimulators": [
            {
                "Name": "Lin-Simulator",
                "SimulatedLinks": [
                    "LIN1"
                ]
            }
        ],

        "TimeSync": {
            "SyncPolicy": "Loose",
            "TickPeriodNs": 1000000
        }

    },

    "MiddlewareConfig": {
        "ActiveMiddleware": "VAsio"
    },

    "LaunchConfigurations": [
        {
            "Name": "Installation",
            "ParticipantEnvironments": [
                {
                    "Participant": "LinMaster",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoLin",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% LinMaster %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "LinSlave",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoLin",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% LinSlave %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }

            ]
        }
    ]

}
