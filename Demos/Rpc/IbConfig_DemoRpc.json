{
  "ConfigVersion": "0.0.1",
  "ConfigName": "RpcDemo",
  "Description": "Sample Configuration for Rpc",

  "SimulationSetup": {

    "Participants": [
      {
        "Name": "Client",
        "Description": "Rpc client",
        "Logger": {
          "Sinks": [
            {
              "Type": "Stdout",
              "Level": "Warn"
            }
          ]
        },
        "ParticipantController": {
          "SyncType": "DistributedTimeQuantum"
        },
        "RpcClients": [
          { "Name": "Add100" },
          { "Name": "Sort" }
        ]
      },
      {
        "Name": "Server",
        "Description": "Rpc server",

        "Logger": {
          "Sinks": [
            {
              "Type": "Stdout",
              "Level": "Warn"
            }
          ]
        },

        "ParticipantController": {
          "SyncType": "DistributedTimeQuantum"
        },
        "RpcServers": [
          { "Name": "Add100" },
          { "Name": "Sort" }
        ]
      },
      {
        "Name": "SystemController",

        "Logger": {
          "Sinks": [
            {
              "Type": "Remote"
            }
          ]
        }
      },
      {
        "Name": "SystemMonitor",
        "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",

        "Logger": {
          "LogFromRemotes": true,
          "FlushLevel": "Info",
          "Sinks": [
            {
              "Type": "Stdout"
            }
          ]
        }
      }
    ],
    "Links": [
      { "Name": "TestFuncA", "Endpoints": [ "Client/Add100", "Server/Add100" ] },
      { "Name": "TestFuncB", "Endpoints": [ "Client/Sort", "Server/Sort" ] }
    ]
  },

  "MiddlewareConfig": {
    "ActiveMiddleware": "VAsio"
  },

  "LaunchConfigurations": [
    {
      "Name": "Installation",
      "ParticipantEnvironments": [
        {
          "Participant": "Publisher",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoRpc",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Client %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "Subscriber",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoRpc",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Server %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "SystemMonitor",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemMonitor",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "SystemController",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbSystemController",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
        }
      ]
    }
  ]
}
