{
  "ConfigVersion": "0.0.1",
  "ConfigName": "GenericMessageDemo",
  "Description": "Sample Configuration for Generic Messages",

  "SimulationSetup": {

    "Participants": [
      {
        "Name": "Node1",
        "SyncType": "DiscreteTime",
        "IsSyncMaster": true,
        "GenericPublishers": [
          { "Name": "Link12" },
          { "Name": "Link13" },
          { "Name": "Link14" }
        ],
        "GenericSubscribers": [
          "Link21",
          "Link31",
          "Link41"
        ]
      },
      {
        "Name": "Node2",
        "SyncType": "DiscreteTime",
        "IsSyncMaster": false,
        "GenericPublishers": [
          { "Name": "Link21" },
          { "Name": "Link23" },
          { "Name": "Link24" }
        ],
        "GenericSubscribers": [
          "Link12",
          "Link32",
          "Link42"
        ]
      },
      {
        "Name": "Node3",
        "SyncType": "DiscreteTime",
        "IsSyncMaster": false,
        "GenericPublishers": [
          { "Name": "Link31" },
          { "Name": "Link32" },
          { "Name": "Link34" }
        ],
        "GenericSubscribers": [
          "Link13",
          "Link23",
          "Link43"
        ]
      },
      {
        "Name": "Node4",
        "SyncType": "DiscreteTime",
        "IsSyncMaster": false,
        "GenericPublishers": [
          { "Name": "Link41" },
          { "Name": "Link42" },
          { "Name": "Link43" }
        ],
        "GenericSubscribers": [
          "Link14",
          "Link24",
          "Link34"
        ]
      },
      {
        "Name": "SystemController",
        "SyncType": "Unsynchronized"
      },
      {
        "Name": "SystemMonitor",
        "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchronization.",
        "SyncType": "Unsynchronized"
      }
    ],
    "Links": [
      {
        "Name": "Link12",
        "Endpoints": [
          "Node1/Link12",
          "Node2/Link12"
        ]
      },
      {
        "Name": "Link13",
        "Endpoints": [
          "Node1/Link13",
          "Node3/Link13"
        ]
      },
      {
        "Name": "Link14",
        "Endpoints": [
          "Node1/Link14",
          "Node4/Link14"
        ]
      },
      {
        "Name": "Link21",
        "Endpoints": [
          "Node2/Link21",
          "Node1/Link21"
        ]
      },
      {
        "Name": "Link23",
        "Endpoints": [
          "Node2/Link23",
          "Node3/Link23"
        ]
      },
      {
        "Name": "Link24",
        "Endpoints": [
          "Node2/Link24",
          "Node4/Link24"
        ]
      },
      {
        "Name": "Link31",
        "Endpoints": [
          "Node3/Link31",
          "Node1/Link31"
        ]
      },
      {
        "Name": "Link32",
        "Endpoints": [
          "Node3/Link32",
          "Node2/Link32"
        ]
      },
      {
        "Name": "Link34",
        "Endpoints": [
          "Node3/Link34",
          "Node4/Link34"
        ]
      },
      {
        "Name": "Link41",
        "Endpoints": [
          "Node4/Link41",
          "Node1/Link41"
        ]
      },
      {
        "Name": "Link42",
        "Endpoints": [
          "Node4/Link42",
          "Node2/Link42"
        ]
      },
      {
        "Name": "Link43",
        "Endpoints": [
          "Node4/Link43",
          "Node3/Link43"
        ]
      }
    ],

    "TimeSync": {
      "SyncPolicy": "Loose",
      "TickPeriodNs": 1000000
    }

  },

  "LaunchConfigurations": [
    {
      "Name": "Installation",
      "ParticipantEnvironments": [
        {
          "Participant": "All Participants",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoBenchmark",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Publisher %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "SystemMonitor",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoPassiveSystemMonitor",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
        },
        {
          "Participant": "SystemController",
          "Environment": "CustomExecutable",
          "WorkingFolder": ".",
          "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoSystemController",
          "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
        }
      ]
    }
  ]
}
