{
    "ConfigVersion": "0.0.1",
    "ConfigName": "FlexRayDemo",
    "Description": "Sample configuration for FlexRay without NetworkSimulator",

    "SimulationSetup": {

        "Participants": [
            {
                "Name": "Node0",
                "SyncType": "DiscreteTime",
                "IsSyncMaster": true,

                "FlexRayControllers": [ "FlexRay1" ]
            },
            {
                "Name": "Node1",
                "SyncType": "DiscreteTime",

                "FlexRayControllers": [ "FlexRay1" ]
            },
            {
                "Name": "SystemController",
                "SyncType": "Unsynchronized"
            },
            {
                "Name": "SystemMonitor",
                "Description": "Passive SystemMonitor that can be optionally attached. Does not participate in synchroniatzion.",
                "SyncType": "Unsynchronized"
            }
        ],

        "Links": [
            {
                "Name": "FlexRay-Cluster-1",
                "Endpoints": [
                    "Node0/FlexRay1",
                    "Node1/FlexRay1"
                ]
            }
        ],

        "TimeSync": {
            "SyncType": "TickTickDone",
            "TickPeriodNs": 1000000
        }

    },

    "LaunchConfigurations": [
        {
            "Name": "Installation",
            "ParticipantEnvironments": [
                {
                    "Participant": "Node0",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node0 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "Node1",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node1 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoPassiveSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "%INTEGRATIONBUS_BINPATH%IbDemoSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }
            ]
        },
        {
            "Name": "Developer-WinDebug",
            "ParticipantEnvironments": [
                {
                    "Participant": "Node0",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "../Debug/bin/IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node0 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "Node1",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "../Debug/bin/IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node1 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "./Debug/IbDemoPassiveSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "./Debug/IbDemoSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }
            ]
        },
        {
            "Name": "Developer-WinRelease",
            "ParticipantEnvironments": [
                {
                    "Participant": "Node0",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "../Release/bin/IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node0 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "Node1",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "../Release/bin/IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node1 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemMonitor",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "./Release/IbDemoPassiveSystemMonitor",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "SystemController",
                    "Environment": "CustomExecutable",
                    "WorkingFolder": ".",
                    "Executable": "./Release/IbDemoSystemController",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% %INTEGRATIONBUS_DOMAINID%"
                }
            ]
        },
        {
            "Name": "Developer-Linux",
            "ParticipantEnvironments": [
                {
                    "Participant": "Node0",
                    "Environment": "CustomExecutable", 
                    "WorkingFolder": ".",
                    "Executable": "../bin/IbDemoFlexray",
                    "Arguments": "%INTEGRATIONBUS_CONFIGFILE% Node0 %INTEGRATIONBUS_DOMAINID%"
                },
                {
                    "Participant": "Node1",
